{
  "$schema": "https://raw.githubusercontent.com/georgeollis/azure-private-endpoint-manager/main/schema.json",
  "title": "Azure Private Endpoint Manager Configuration",
  "description": "Schema for Private Endpoint Manager configuration file",
  "type": "object",
  "required": [
    "version",
    "privateDnsZoneMappings"
  ],
  "properties": {
    "version": {
      "type": "string",
      "description": "Configuration schema version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "privateDnsZoneMappings": {
      "type": "object",
      "description": "Mapping of private link service group IDs to private DNS zones",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "object",
          "description": "DNS zone mapping configuration",
          "required": [
            "zoneName",
            "resourceId"
          ],
          "properties": {
            "zoneName": {
              "type": "string",
              "description": "The private DNS zone name (e.g., privatelink.blob.core.windows.net)",
              "pattern": "^privatelink\\.[a-zA-Z0-9]+\\..*\\.net$"
            },
            "resourceId": {
              "type": "string",
              "description": "The Azure resource ID of the private DNS zone",
              "pattern": "^/subscriptions/[a-zA-Z0-9-]+/resourceGroups/[a-zA-Z0-9._()-]+/providers/Microsoft\\.Network/privateDnsZones/.*$"
            }
          },
          "additionalProperties": false
        }
      },
      "minProperties": 1
    }
  },
  "additionalProperties": false
}
